<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name, 'Artist Name' %>
  <%= f.text_field :artist_name, id: :song_artist_name %>
  <br/>
  <%= f.label :genre_id, 'Select Genre' %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "Choose a Genre" %>
  <br/>

  <%= f.label :notes_1 %>
  <%= f.text_field :notes_1 %>
  <br />

  <%= f.label :notes_2 %>
  <%= f.text_field :notes_2 %>
  <br />

  <%= f.submit %>
<% end %>


